{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/blender33_cyclesphi/blender",
            // "args": ["-b", "${workspaceFolder}/src/lib/benchmarks/cycles/classroom/classroom.blend --python ${workspaceFolder}/src/cyclesphi/client/data/over.py", "-y", "-x 1", "-o ${workspaceFolder}/data/####", "-F PNG", "-f 1"],
            "args": [
                "-b",
                "${workspaceFolder}/src/lib/benchmarks/cycles/classroom/classroom.blend",
                "--python",
                "${workspaceFolder}/src/cyclesphi/client/data/over.py",
                "-y",
                "-x",
                "1",
                "-o",
                "${workspaceFolder}/data/####",
                "-F",
                "PNG",
                "-f",
                "1"
             ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [ {
                "name": "ROOT",
                "value": "${workspaceFolder}"
            },
            {
                "name": "CACHE_DIR",
                "value": "${workspaceFolder}/data"
            },
            {
                "name": "CLIENT_FILE_ACTION",
                "value": "PRE"
            },
            // {
            //     "name": "CLIENT_FILE_ACTION",
            //     "value": "POST"
            // },
            {
                "name": "CLIENT_FILE_KERNEL_GLOBAL",
                "value": "${workspaceFolder}/data/cache.kg"
            },
            {
                "name": "CLIENT_FILE_CYCLES_BUFFER",
                "value": "${workspaceFolder}/data/cache.bf"
            }],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}