    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) attach",
            "type": "cppdbg",
            // "request": "launch",
            "request":"attach",
            "processId": "${command:pickProcess}", 
            "program": "/home/sherry/cyclephi-git/testmpi/mpi_gather",
            // "program": "${workspaceFolder}/install/cyclesphi33_gpu/bin/blender_client",
            "args": ["--allow-run-as-root","np","4"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [ ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}